<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardBackgroundColor="#0000"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:padding="0dp"
    card_view:cardElevation="0dp"
    app:cardCornerRadius="2sp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/teal_200"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_margin="10dp"
        android:contentDescription="@string/profileimage"
        android:src="@drawable/user"
        app:cardElevation="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="130dp"
        >
        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint ="@string/nombre_del_usuario"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/micolor18"
            android:padding="2dp"
            android:layout_marginTop="15dp"
        />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint ="@string/estado_del_usuario"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/micolor6"
            android:padding="2dp"
            android:layout_marginTop="2dp"
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAddContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/agregar_contacto"
            android:textColor="@color/white"
            android:background="@color/micolor18"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:visibility="gone"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>